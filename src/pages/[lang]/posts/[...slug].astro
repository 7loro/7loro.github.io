---
import { getCollection } from 'astro:content';
import PostLayout from '../../../layouts/PostLayout.astro';
import { calculateReadingTime } from '../../../utils/readingTime';
import { isDefaultLangPost, getBaseSlug, getPostLang, getTranslations, getPostUrl } from '../../../utils/i18nRouting';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const translatedPosts = allPosts.filter(p => !isDefaultLangPost(p));

  return translatedPosts.map(post => ({
    params: {
      lang: getPostLang(post),
      slug: getBaseSlug(post.slug),
    },
    props: { post, allPosts },
  }));
}

const { post, allPosts } = Astro.props;
const { Content, headings } = await post.render();
const { title, summary, date, tags, lang } = post.data;
const readingTime = calculateReadingTime(post.body);
const translations = getTranslations(allPosts, post);
const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base : `${base}/`;
const currentUrl = getPostUrl(post, baseUrl);
---

<PostLayout 
  title={title} 
  description={summary} 
  date={date} 
  tags={tags}
  headings={headings}
  readingTime={readingTime}
  lang={lang}
  translations={translations.map(t => ({ lang: t.lang, url: getPostUrl(t.post, baseUrl) }))}
  currentUrl={currentUrl}
>
  <Content />
</PostLayout>
